print("\n Happy FizzBuzzing!")

def fizzbuzz(x):
    if x % 5 == 0 and x % 3 == 0:
        return "FizzBuzz"
    elif x % 3 == 0:
        return "Fizz"
    elif x % 5 == 0:
        return "Buzz"
    else:
        return x

while True:
     x = int(input("Enter your number or (0) to exit: "))
     if x == 0:
         break
     print(fizzbuzz(x))

print("\n Thanks for FizzBuzzing ;)!")
